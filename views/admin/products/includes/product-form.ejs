<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
    <div>
        <label for="title">Product name</label>
        <input type="text" id="title" name="title" value="<%= product.title %>" required>
    </div>
    <div>
        <label for="image">Image</label>
        <input 
            type="file" 
            id="image" 
            name="image" 
            accept=".jpg, .png, .jpeg"
            <% if (imageRequired) { %>
             required
            <% } %>>
    </div>
    <div>
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary" value="<%= product.summary %>" required maxlength="250">
    </div>
    <div>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="<%= product.price %>" min="0.01" step="0.01" required>
    </div>
    <div>
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="8" required><%= product.description %></textarea>
    </div>
    <div>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button class="btn">Save</button>
    </div>
</form>