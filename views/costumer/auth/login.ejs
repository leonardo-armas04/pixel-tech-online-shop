<%- include("../../shared/includes/head",{pageTitle: "Login"}) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
</head>

<body>
    <%- include("../../shared/includes/header") %>
    <main>
        <h1>Login</h1>
        <div class="alert-container">
            <% if (inputData.errorMessage) { %>
                <section class="alert">
                    <h2>Invalid credentials</h2>
                    <p><%= inputData.errorMessage %></p>
                </section>
            <% } %>
        </div>
        <form action="/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <div>
                <label for="email">Email</label>
                <input type="email" name="email" value="<%= inputData.email %>" id="email" required>
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" name="password" value="<%= inputData.password %>" id="password" minlength="8" required>
            </div>
            <button class="btn">Login</button>
            <p id="switch-form"><a href="/signup">Create account instead</a></p>
        </form>
    </main>
    
<%- include("../../shared/includes/footer") %>